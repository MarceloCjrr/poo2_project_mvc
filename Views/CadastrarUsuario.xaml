<Window x:Class="poo2_poject_mvc.CadastrarUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Novo Usuário" 
        Height="400" Width="400" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8 15"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF1E2A44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3A4A6D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#FF1E2A44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3A4A6D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF040A17" Offset="1"/>
                <GradientStop Color="#FF0B1B42" Offset="0.505"/>
                <GradientStop Color="#FF040A17"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" Margin="30">
            <TextBlock Text="Cadastrar Novo Usuario" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20" 
                       Foreground="White"/>

            <TextBlock Text="Nome de Usuário (Username):" Margin="0,5,0,0" Foreground="White"/>
            <TextBox x:Name="TxtNewUsername" 
                     Height="30" 
                     Padding="5" Cursor="Hand"/>

            <TextBlock Text="Senha (Mínimo 5 caracteres):" Margin="0,15,0,0" Foreground="White"/>

            <PasswordBox x:Name="TxtNewPassword" 
                         Height="30" 
                         Padding="5"
                         KeyDown="TxtNewPassword_KeyDown" Cursor="Hand"/>

            <TextBlock Text="Nome Completo (Opcional):" Margin="0,15,0,0" Foreground="White"/>
            <TextBox x:Name="TxtNomeCompleto" 
                     Height="30" 
                     Padding="5" Cursor="Hand"/>

            <Button Content="Cadastrar e Fechar" 
                    Margin="0,25,0,0" 
                    Height="35" 
                    Click="BtnCadastrar_Click"
                    FontWeight="Bold"
                    Style="{StaticResource PrimaryButton}" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>