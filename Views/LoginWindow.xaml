<Window x:Class="poo2_poject_mvc.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Cadastro" 
        Height="390" Width="400" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Foreground="White">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF040A17" Offset="0"/>
            <GradientStop Color="#FF040A17" Offset="1"/>
            <GradientStop Color="#FF060606" Offset="0.5"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8 15"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecundaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FF6A4CAF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8 15"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF1E2A44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3A4A6D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#FF1E2A44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3A4A6D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,5">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF040A17"/>
                <GradientStop Color="#FF040A17" Offset="1"/>
                <GradientStop Color="#FF0B1B42" Offset="0.505"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" Margin="30">
            <TextBlock Text="Login" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20" 
                       Foreground="White"/>

            <TextBlock Text="Usuário:" Margin="0,5,0,0"/>
            <TextBox x:Name="TxtUsername" 
                     Height="30" 
                     Padding="5" 
                     Text="admin" Cursor="Hand"/>

            <TextBlock Text="Senha:" Margin="0,15,0,0"/>
            <PasswordBox x:Name="TxtPassword" 
                         Height="30" 
                         Padding="5" 
                         KeyDown="TxtPassword_KeyDown" Cursor="Hand"/>

            <Button Content="Entrar" 
                    Margin="0,25,0,0" 
                    Height="35" 
                    Click="BtnLogin_Click"
                    FontWeight="Bold" Cursor="Hand"
                    Style="{StaticResource PrimaryButton}"/>

            <Button Content="Novo Usuário" 
                    Margin="0,10,0,0" 
                    Height="35" 
                    Click="BtnAbrirCadastro_Click"
                    BorderThickness="0"
                    Style="{StaticResource SecundaryButton}" Cursor="Hand"/>

        </StackPanel>
    </Grid>
   
</Window>